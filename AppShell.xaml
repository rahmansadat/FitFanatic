<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourseworkApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CourseworkApp.Views"
    Shell.FlyoutBehavior="Disabled"
>

    

    <!--Main App layout-->
    <TabBar Route="mainapp">
        <Tab
            Title="Log Workout"
            Route="logworkout"
            Icon="plus.png">
            <ShellContent ContentTemplate="{DataTemplate views:LogWorkoutPage}"/>
        </Tab>

        <Tab
            Title="Exercises"
            Route="exercises"
            Icon="dumbbell.png">
            <ShellContent ContentTemplate="{DataTemplate views:ExercisesPage}"/>
        </Tab>

        <Tab
            Title="Score"
            Route="score"
            Icon="trophy.png">
            <ShellContent ContentTemplate="{DataTemplate views:ScorePage}"/>
        </Tab>

        <Tab
            Title="History"
            Route="history"
            Icon="history.png">
            <ShellContent ContentTemplate="{DataTemplate views:HistoryPage}"/>
        </Tab>
    </TabBar>

</Shell>