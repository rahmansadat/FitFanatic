<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseworkApp.Views.HistoryPage"
             Title="Workout history"
             BackgroundColor="#102825">

    <Grid RowDefinitions="0.2*, 0.8*">
    <BoxView Style="{StaticResource headerBox}"/>

    <Label Grid.Row="0"
            Text="View below a complete log of all workouts performed."
            Style="{StaticResource headerLabel}"/>

        <ScrollView Grid.Row="1">

            <StackLayout x:Name="mainStack" Margin ="20" Spacing="20">
            </StackLayout>

        </ScrollView>

    </Grid>
</ContentPage>