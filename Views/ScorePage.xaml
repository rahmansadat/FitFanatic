<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseworkApp.Views.ScorePage"
             Title="Score"
             BackgroundColor="#102825">

    <Grid RowDefinitions="0.2*, 0.4*, 0.4*">
    <BoxView Style="{StaticResource headerBox}"/>

    <Label Grid.Row="0"
            Text="Read the quote and get motivated!&#10;Keep working out and you'll earn the next shiny badge!"
            Style="{StaticResource headerLabel}"/>

        <StackLayout
            x:Name="mystack1"
            Grid.Row="1"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"/>

        <StackLayout
            x:Name="mystack2"
            Grid.Row="2"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"/>
    </Grid>

</ContentPage>