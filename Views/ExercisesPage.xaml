<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseworkApp.Views.ExercisesPage"
             Title="Exercises"
             xmlns:viewmodel="clr-namespace:CourseworkApp.ViewModels"
             x:DataType="viewmodel:ExercisesPageViewModel"
             BackgroundColor="White">

    <Grid x:Name="mygrid" RowDefinitions="0.2*, 0.8*">
        <BoxView Style="{StaticResource headerBox}"/>
        <BoxView Grid.Row="1" Color="White" />

        <Label Grid.Row="0"
            Text="Swipe to view all exercises in the database."
            Style="{StaticResource headerLabel}"/>

    </Grid>

</ContentPage>